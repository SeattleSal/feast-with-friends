  <div class="profilePage">
    <div class="container-fluid">
      <div class="row">
        <div
          id="profileColumn"
          class="d-flex flex-column justify-content-center align-middle col-md-5"
        >
          <!-- User name -->
          <h2>Welcome</h2>
          <h1 id="profileName" class="display-4 text-center" data-id="{{user.id}}">{{user.name}}</h1>
          <!-- user restrictions -->
          <form>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="veganCheck"
              {{#if user.vegan}} checked {{/if}}
            />
            <label class="change-vegan" for="veganCheck">
              Vegan
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="dairyCheck"
              {{#if user.lactoseIntolerance}} checked {{/if}}
            />
            <label class="form-check-label" for="dairyCheck">
              Dairy Free
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="vegetarianCheck"
              {{#if user.vegetarian}} checked {{/if}}
            />
            <label class="form-check-label" for="flexCheckChecked">
              Vegetarian
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="nutFreeCheck"
              {{#if user.nutAllergy}} checked {{/if}}
            />
            <label class="form-check-label" for="flexCheckChecked">
              Nut Free
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="glutenCheck"
              {{#if user.glutenIntolerance}} checked {{/if}}
            />
            <label class="form-check-label" for="flexCheckChecked">
              Gluten Free
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="shellfishCheck"
              {{#if user.shellfishAllergy}} checked {{/if}}
            />
            <label class="form-check-label" for="flexCheckChecked">
              No Shellfish
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="kosherCheck"
              {{#if user.kosher}} checked {{/if}}
            />
            <label class="form-check-label" for="flexCheckChecked">
              Kosher
            </label>
          </div>
          <button type="button" class="btn btn-primary justify-items-center" id="update-preferences">
            Update Preferences
          </button>
          <button type="button" class="btn btn-primary justify-items-center" id="logout">
            Logout
          </button>

          </form>
          <!-- user selection -->
          <select class="form-select" aria-label="Default select example">
            <option selected>Please Select Meal Time</option>
            <option value="1">Breakfast</option>
            <option value="2">Lunch</option>
            <option value="3">Dinner</option>
          </select>
          <button type="button" class="btn btn-primary justify-items-center">
            See Suggestions
          </button>
        </div>

        <div
          id="restaurantColumn"
          class="col-md-7 d-inline-flex flex-column justify-content-center align-items-center pt-3"
        >
          <div class="container gx-3">
            <div class="row">
              <div class="col-lg-4">
                <div class="card p-3 bg-light">
                  <img
                    src="http://s3-media4.fl.yelpcdn.com/bphoto/6He-NlZrAv2mDV-yg6jW3g/o.jpg"
                    class="card-img-top img-fluid"
                    alt="food-pic"
                  />
                  <div class="card-body">
                    <h5 class="card-title">Restaurant</h5>
                    <p class="card-text">Address, Phone Number</p>
                    <a href="#" class="btn btn-primary">Website</a>
                  </div>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="card p-3 bg-light">
                  <img
                    src="https://s3-media1.fl.yelpcdn.com/bphoto/howYvOKNPXU9A5KUahEXLA/o.jpg"
                    class="card-img-top img-fluid"
                    alt="food-pic"
                  />
                  <div class="card-body">
                    <h5 class="card-title">Restaurant</h5>
                    <p class="card-text">Address, Phone Number</p>
                    <a href="#" class="btn btn-primary">Website</a>
                  </div>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="card p-3 bg-light">
                  <img
                    src="http://s3-media4.fl.yelpcdn.com/bphoto/6He-NlZrAv2mDV-yg6jW3g/o.jpg"
                    class="card-img-top img-fluid"
                    alt="food-pic"
                  />
                  <div class="card-body">
                    <h5 class="card-title">Restaurant</h5>
                    <p class="card-text">Address, Phone Number</p>
                    <a href="#" class="btn btn-primary">Website</a>
                  </div>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="card p-3 bg-light">
                  <img
                    src="https://images.unsplash.com/photo-1476718406336-bb5a9690ee2a?ixid=MXwxMjA3fDB8MHxzZWFyY2h8NXx8Zm9vZHxlbnwwfHwwfA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"
                    class="card-img-top img-fluid"
                    alt="food-pic"
                  />
                  <div class="card-body">
                    <h5 class="card-title">Restaurant</h5>
                    <p class="card-text">Address, Phone Number</p>
                    <a href="#" class="btn btn-primary">Website</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

